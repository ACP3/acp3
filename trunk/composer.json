{
    "name": "acp3/ACP3",
    "description": "ACP3 is a highly customizable and easy to use web content management system based on PHP5 and MySQL.",
    "authors": [
        {
            "name": "Tino Goratsch",
            "email": "mail@acp3-cms.net"
        }
    ],
    "autoload": {
        "psr-4": {"ACP3\\": "./ACP3"}
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "smarty/smarty",
                "version": "3.1.18",
                "dist": {
                    "url": "http://www.smarty.net/files/Smarty-stable.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "http://smarty-php.googlecode.com/svn/",
                    "type": "svn",
                    "reference": "tags/Smarty_3_1_18/distribution/"
                },
                "autoload": {
                    "classmap": [
                        "libs/"
                    ]
                }
            }
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "doctrine/dbal": "2.4.*",
        "phpmailer/phpmailer": "5.2.*",
        "smarty/smarty": "3.1.18",
        "inlinestyle/inlinestyle": "1.*",
        "mibe/feedwriter": "dev-master",
        "monolog/monolog": "1.10.0",
        "mrclay/minify": "2.2.0",
        "symfony/config": "v2.5.0",
        "symfony/dependency-injection": "v2.5.0",
        "symfony/yaml": "v2.5.0"
    }
}
