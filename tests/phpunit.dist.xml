<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../vendor/phpunit/phpunit/phpunit.xsd"
        bootstrap="./bootstrap.php">
    <testsuites>
        <testsuite name="ACP3-CMS Test Suite">
            <directory>./../ACP3/Core/tests/</directory>
            <directory>./../ACP3/Modules/*/*/Test/</directory>
            <directory>./../ACP3/Modules/*/*/tests/</directory>
            <exclude>./../vendor/*</exclude>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./../ACP3/Core/</directory>
            <directory suffix=".php">./../ACP3/Modules/</directory>
            <directory suffix=".php">./../installation/Installer/</directory>
            <exclude>
                <directory>./../ACP3/Core/tests/</directory>
                <directory>./../ACP3/Modules/*/*/Test/</directory>
                <directory>./../ACP3/Modules/*/*/tests/</directory>
                <directory>./../ACP3/Modules/*/*/Resources/</directory>
                <directory>./../vendor/</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
