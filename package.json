{
  "name": "acp3-cms",
  "version": "6.18.1",
  "description": "The ACP3 CMS is a highly customizable and easy to use Web Content Management System based on PHP and MySQL.",
  "main": "",
  "directories": {},
  "scripts": {
    "build": "gulp",
    "css-lint": "stylelint \"**/*.{css,scss}\" --cache --cache-location .stylelintcache --rd",
    "css-lint:fix": "npm run css-lint -- --fix",
    "eslint": "eslint -c .eslintrc.json --cache --cache-location=.eslintcache .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier": "prettier --check --cache **/*.{js,cjs,mjs,json,md,yml}",
    "prettier:fix": "prettier --write --cache **/*.{js,cjs,mjs,json,md,yml}",
    "lint-all": "concurrently \"npm:prettier:fix\" \"npm:css-lint:fix\" \"npm:eslint:fix\" --kill-others-on-fail --group",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/ACP3/cms.git"
  },
  "author": "Tino Goratsch <mail@acp3-cms.net>",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://gitlab.com/ACP3/cms/issues"
  },
  "homepage": "https://www.acp3-cms.net",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.14",
    "@ronilaukkarinen/gulp-stylelint": "^14.1.1",
    "autoprefixer": "^10.4.15",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "cssnano": "^6.0.1",
    "del": "^7.1.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globby": "^13.2.2",
    "gulp": "^4.0.2",
    "gulp-bump": "^3.2.0",
    "gulp-change": "^1.0.2",
    "gulp-dependents": "^1.2.5",
    "gulp-eslint-new": "^1.8.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sharp-responsive": "^0.4.1",
    "husky": "^8.0.3",
    "js-yaml": "^4.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "sass": "~1.64.0",
    "semver": "^7.5.4",
    "simple-git": "^3.19.1",
    "stylelint": "^15.10.3",
    "stylelint-config-twbs-bootstrap": "^11.0.1",
    "stylelint-prettier": "^4.0.2",
    "terser-webpack-plugin": "^5.3.9",
    "webpack-stream": "^7.0.0",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.5.7",
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.1",
    "ckeditor-codemirror-plugin": "^1.18.8",
    "ckeditor4": "^4.23.0",
    "core-js": "^3.32.1",
    "datatables.net": "^1.13.6",
    "datatables.net-bs5": "^1.13.6",
    "jquery": "^3.7.1",
    "js-cookie": "^3.0.5",
    "klaro": "^0.7.18",
    "photoswipe": "^5.3.9",
    "regenerator-runtime": "^0.14.0",
    "rich-filemanager": "https://github.com/tinogo/RichFilemanager/tarball/rework-dependencies",
    "shariff": "^3.2.1",
    "tinymce": "^4.9.11"
  },
  "browserslist": [
    "defaults and >= 1%",
    "Firefox ESR"
  ],
  "lint-staged": {
    "!(*.min).{js,cjs,mjs}": "npm run eslint:fix",
    "!(*.min).{css,scss}": "npn run css-lint:fix",
    "!(*.min).{js,cjs,mjs,json,md,yml}": "npm run prettier:fix",
    "*.php": "docker-compose run --no-deps --rm app composer php-cs-fixer"
  }
}
